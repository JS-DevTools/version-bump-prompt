{
  "name": "version-bump-prompt",
  "version": "1.7.1",
  "description": "Automatically (or with prompts) bump your version number, commit changes, tag, and push to Git",
  "keywords": [
    "version",
    "bump",
    "npm",
    "node",
    "bower",
    "package",
    "git",
    "tag",
    "push",
    "prompt"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/version-bump-prompt",
  "main": "lib/index.js",
  "scripts": {
    "lint": "jshint . --verbose && jscs . --verbose",
    "build": "npm run lint",
    "test": "mocha --bail --recursive tests/fixtures tests/specs",
    "upgrade": "npm-check -u",
    "release": "npm run upgrade && npm run build && npm test && node bin/bump.js --prompt --tag --push --all",
    "semver": "semver"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/version-bump-prompt.git"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "coveralls": "^2.11.13",
    "jscs": "^3.0.7",
    "jshint": "^2.8.0",
    "lodash": "^4.15.0",
    "mocha": "^3.1.0",
    "npm-check": "^5.2.3",
    "sinon": "^1.16.1"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "commander": "^2.8.1",
    "detect-indent": "^4.0.0",
    "es6-promise": "^3.0.2",
    "glob": "^7.0.6",
    "inquirer": "^1.1.3",
    "log-symbols": "^1.0.2",
    "semver": "^5.0.3",
    "spawn-sync": "^1.0.13"
  },
  "contributors": [
    "Alexey Raspopov (https://github.com/alexeyraspopov)",
    "James Messinger (http://JamesMessinger.com)"
  ],
  "bin": {
    "bump": "bin/bump.js"
  }
}